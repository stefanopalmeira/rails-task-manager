<h1>Task details</h1>

<p>Title: <%= @task.title %></p>
<p>Description: <%= @task.details %></p>
<p>Done:
<% if @task.completed %>
<i class="far fa-check-square"></i>
<% else %>
<i class="far fa-square"></i>
<% end %>

<p><%= link_to 'All Tasks', tasks_path %></p>
<p><%= link_to 'Edit task', edit_task_path(@task) %></p>
<%= link_to 'Destroy task', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>
